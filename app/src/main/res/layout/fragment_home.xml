<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".HomeFragment">

    <!-- Info-Leiste oben -->
    <LinearLayout
        android:id="@+id/info_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="30dp"
        android:gravity="center">
        <TextView
            android:id="@+id/text_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coins: 42"
            android:textSize="20sp"
            android:layout_marginEnd="40dp"/>


        <TextView
            android:id="@+id/text_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: 5"
            android:textSize="20sp"
            android:layout_marginEnd="40dp" />

        <TextView
            android:id="@+id/text_streak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Streak: 12"
            android:textSize="20sp"
        android:layout_marginEnd="40dp"/>

    </LinearLayout>

    <!-- CardView mit ScrollView & Buttons -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="355dp"
        android:layout_marginTop="120dp"
        android:elevation="6dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="#E9D1D0"
                android:orientation="vertical"
                android:padding="18dp">

                <Button
                    android:id="@+id/button_thema1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:text="Topic 1" />

                <Button
                    android:id="@+id/button_thema2"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="8dp"
                    android:text="Topic 2" />

                <Button
                    android:id="@+id/button_thema3"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="8dp"
                    android:text="Topic 3" />

                <Button
                    android:id="@+id/button_thema4"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="8dp"
                    android:text="Topic 4" />

                <Button
                    android:id="@+id/button_thema5"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="8dp"
                    android:text="Topic 5" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick a Topic!"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:textColor="#333333" />



</LinearLayout>
