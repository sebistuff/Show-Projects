<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/text_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wahrscheinlichkeit 1"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#333333" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:elevation="6dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_video_lection_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Now a Test! Touch only the true ones!"
                    android:textAlignment="center"
                    android:textColor="#333333"
                    android:textSize="20sp" />


                <Button
                    android:text="Die Wahrscheinlichkeit eines Ereignisses liegt stets im Intervall [0;1].
 1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_button_1"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:paddingLeft="34dp"
                    android:paddingRight="34dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp" />

                <Button
                    android:text="Ein Ereignis mit P(A)=0,5 hat eine 50 %-Chance einzutreten."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_button_2"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:paddingLeft="34dp"
                    android:paddingRight="34dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp" />


                <Button
                    android:text="Bei einem fairen Würfel ist P(7)=61​."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_button_3"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:paddingLeft="34dp"
                    android:paddingRight="34dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp" />

                <Button
                    android:text="BBei einem fairen Würfel ist P(2)=61​."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_button_4"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:paddingLeft="34dp"
                    android:paddingRight="34dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp" />


                <Button
                    android:text="Die Wahrscheinlichkeit wird üblicherweise mit dem Buchstaben P bezeichnet."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_button_5"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:paddingLeft="34dp"
                    android:paddingRight="34dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp" />



            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/finish__button"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_gravity="center|bottom|right"
                android:layout_marginBottom="50dp"
                android:backgroundTint="#FFD700"
                android:text="Finish Lection"
                android:textSize="14sp" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
