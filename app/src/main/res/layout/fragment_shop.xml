<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ShopFragment">

    <!-- Info-Leiste oben -->
    <LinearLayout
        android:id="@+id/info_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="30dp"
        android:gravity="center">
        <TextView
            android:id="@+id/text_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coins: 42"
            android:textSize="20sp"
            android:layout_marginEnd="40dp"/>


        <TextView
            android:id="@+id/text_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: 5"
            android:textSize="20sp"
            android:layout_marginEnd="40dp" />

        <TextView
            android:id="@+id/text_streak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Streak: 12"
            android:textSize="20sp"
            android:layout_marginEnd="40dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/buy_item"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="150dp"
        android:text="Buy a Item!"
        android:textSize="16sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="355dp"
        android:elevation="6dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="#E9D1D0"
                android:orientation="vertical"
                android:padding="18dp">


                <Button
                    android:id="@+id/item_hat_1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:text="Hat 1" />
                <Button
                    android:id="@+id/item_hat_2"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:text="Hat 2" />

                <Button
                    android:id="@+id/item_glasses_1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="8dp"
                    android:text="Glasses 1" />

                <Button
                    android:id="@+id/item_glasses_2"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="8dp"
                    android:text="Glasses 2" />

                <Button
                    android:id="@+id/item_headphones_1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="8dp"
                    android:text="Headphones 1" />
                <Button
                    android:id="@+id/item_headphones_2"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="8dp"
                    android:text="Headphones 2" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/buy_random_item"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="150dp"
        android:text="Buy a random Item!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buy_random_button"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#FFD700"
        android:text="Buy Random!" />


</FrameLayout>