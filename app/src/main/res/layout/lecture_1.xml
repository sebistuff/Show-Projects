<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/text_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wahrscheinlichkeit 1"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#333333" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_marginHorizontal="20dp"
            android:elevation="6dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_video_lection_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Starting with a Rookie-Video"
                    android:textAlignment="center"
                    android:textColor="#333333"
                    android:textSize="20sp" />

                <!-- VideoLink: https://miro.com/app/board/uXjVI19WJ0I=/?moveToWidget=3458764628808639796&cot=14 -->
                <WebView
                    android:id="@+id/webview_lection_1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="50dp"
                    android:layout_height="256dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:elevation="6dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/text_difinition_heading_lection_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Now a  definition"
                    android:textAlignment="center"
                    android:textColor="#333333"
                    android:textSize="20sp" />



                <TextView
                    android:id="@+id/text_difinition_1_lection_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="Die Wahrscheinlichkeit eines Ereiglisses wird mit einem Zahlenwert zwischen 0 und 1 ausgedrückt zB 0 = 0%, gar nicht möglich, 1 = 100%, wird 100% passieren, 0,5 = 50%, gleiche Chance für passieren und nicht passieren"
                    android:textAlignment="center"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_difinition_2_lection_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:text="Betrachten wir einen fairen Würfel mit den Zahlen 1 bis 6: Eine 7 zu würfeln ist unmöglich, daher ist P(7) =  0. Dass eine 3 fällt, ist nur eines von mehreren möglichen Ergebnissen, also gilt
 0&lt;P(3)&lt;1.Da man beim Würfeln stets eine Zahl erhält und niemals etwa „Kopf“, ist das Ereignis „Zahl“  sicher, weshalb P(Zahl) = 1."
                    android:textAlignment="center"
                    android:textColor="#333333"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/finish__button"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_gravity="center|bottom|right"
                android:layout_marginBottom="50dp"
                android:backgroundTint="#FFD700"
                android:text="Finish Lection"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
